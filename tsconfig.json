{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "rootDir": "./src", // Specifies where your source code is
    "module": "ESNext", // Output directory for compiled files
    "moduleResolution": "Bundler",
    "paths": { "@/*": ["./src/*"] },
    "types": ["node"],
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true, // Allows default imports for CommonJS modules
    "skipLibCheck": true
  },
  "include": ["src"], // Includes the source files in the src folder
  "exclude": ["node_modules"] // Exclude node_modules to prevent processing
}
